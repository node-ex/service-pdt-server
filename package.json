{
  "name": "service-pdt-server",
  "version": "0.1.0",
  "description": "PDT server service.",
  "repository": "https://github.com/node-ex/service-pdt-server",
  "author": "Pavel Balashov <pavel.balashov1@gmail.com>",
  "license": "ICS",
  "private": true,
  "scripts": {
    "start": "babel-node ./src/index.js",
    "dev": "nodemon --exec babel-node ./src/index.js",
    "build": "cross-env NODE_ENV=production babel --verbose --source-maps inline --compact --minified --copy-files --delete-dir-on-start --out-dir ./dist ./src",
    "serve": "cross-env NODE_ENV=production node ./dist/index.js",
    "dev:docker": "npm run dev:docker:build && npm run dev:docker:up",
    "dev:docker:build": "./_script/docker-images-build-dev.sh",
    "dev:docker:up": "./_script/docker-containers-up-dev-dependencies.sh",
    "dev:docker:down": "./_script/docker-containers-down-dev-dependencies.sh",
    "serve:docker": "npm run serve:docker:build && npm run serve:docker:up",
    "serve:docker:build": "echo 'Not implemented.'",
    "serve:docker:up": "echo 'Not implemented.'",
    "serve:docker:down": "echo 'Not implemented.'",
    "lint:all": "npm run lint:eslint -- .; npm run lint:stylelint -- '**/*.css' '**/*.scss'",
    "lint:all:fix": "npm run lint:eslint:fix -- .; npm run lint:stylelint:fix -- '**/*.css' '**/*.scss'",
    "lint:eslint": "eslint --ext .js,.json,.html --ignore-path ../.gitignore --ignore-path .eslintignore",
    "lint:eslint:fix": "eslint --ext .js,.json,.html --ignore-path ../.gitignore --ignore-path .eslintignore --fix",
    "lint:stylelint": "stylelint --ignore-path '../.gitignore'",
    "lint:stylelint:fix": "stylelint --fix --ignore-path '../.gitignore'",
    "test": "npm run test:unit",
    "test:unit": "cross-env NODE_ENV=test npx jest --coverage",
    "test:docker": "npm run test:docker:build && npm run test:docker:up",
    "test:docker:build": "docker-compose --file docker-compose.test.yml --project-name peek-outside-server build --force-rm --no-cache",
    "test:docker:up": "docker-compose --file docker-compose.test.yml --project-name peek-outside-server up --no-build --force-recreate",
    "precommit": "npx lint-staged",
    "prepush": "npm run test:unit"
  },
  "dependencies": {
    "body-parser": "1.18.3",
    "cross-env": "5.2.0",
    "dotenv": "6.1.0",
    "express": "4.16.4",
    "lodash": "4.17.11",
    "source-map-support": "0.5.9"
  },
  "devDependencies": {
    "@babel/cli": "7.1.2",
    "@babel/core": "7.1.2",
    "@babel/node": "7.0.0",
    "@babel/preset-env": "7.1.0",
    "ajv": "6.5.4",
    "babel-eslint": "10.0.1",
    "babel-jest": "23.6.0",
    "babel-jest-assertions": "0.1.0",
    "babel-plugin-source-map-support": "2.0.1",
    "babel-plugin-syntax-dynamic-import": "6.18.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "documentation": "8.1.2",
    "eslint": "5.8.0",
    "eslint-config-prettier": "3.1.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-compat": "2.6.3",
    "eslint-plugin-html": "4.0.6",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jest": "21.27.1",
    "eslint-plugin-json": "1.2.1",
    "eslint-plugin-node": "8.0.0",
    "eslint-plugin-prettier": "3.0.0",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-standard": "4.0.0",
    "eslint-plugin-testcafe": "0.2.1",
    "eslint-plugin-unicorn": "6.0.1",
    "faker": "4.1.0",
    "husky": "1.1.3",
    "jest": "23.6.0",
    "jest-transform-stub": "1.0.0",
    "jsdom": "13.0.0",
    "lint-staged": "8.0.4",
    "node-sass": "4.10.0",
    "nodemon": "1.18.5",
    "prettier": "1.14.3",
    "stylelint": "9.7.1",
    "stylelint-color-format": "0.2.0",
    "stylelint-config-prettier": "4.0.0",
    "stylelint-config-recess-order": "2.0.0",
    "stylelint-config-standard": "18.2.0",
    "stylelint-config-strict-scss": "0.5.0",
    "stylelint-scss": "3.3.2"
  }
}
